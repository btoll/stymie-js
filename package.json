{
  "name": "stymie",
  "version": "0.4.0",
  "description": "Cryptographically secure password manager",
  "bin": {
    "stymie": "./bin/stymie"
  },
  "main": "./src/index.js",
  "keywords": [
    "password manager",
    "GPG",
    "PGP",
    "password",
    "passphrase",
    "diceware",
    "cryptography"
  ],
  "author": "Benjamin Toll",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/btoll/stymie"
  },
  "dependencies": {
    "diceware": "git+https://github.com/btoll/diceware.git",
    "inquirer": "^0.11.0",
    "jcrypt": "git+https://github.com/btoll/jcrypt.git",
    "logger": "git+https://github.com/btoll/logger.git",
    "ramda": "^0.22.1",
    "sillypass": "git+https://github.com/btoll/sillypass.git",
    "which": "^1.2.4",
    "yargs": "^3.31.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.15",
    "dump_describes": "git+https://github.com/btoll/dump_describes.git",
    "eslint": "^2.2.0",
    "install": "^0.8.2",
    "istanbul": "^0.4.5",
    "npm": "^4.0.2"
  },
  "scripts": {
    "clean": "rm -rf build coverage",
    "coverage": "STYMIE=spec GNUPGHOME=spec/.gnupg JASMINE_CONFIG_PATH=jasmine.json istanbul cover jasmine --captureExceptions",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "lint": "eslint spec src",
    "specs": "STYMIE=spec GNUPGHOME=spec/.gnupg JASMINE_CONFIG_PATH=jasmine.json jasmine && npm run suites",
    "suites": "dump_describes -t spec/stymie-spec.js -d spec -v --html && dump_describes -t spec/stymie-spec.js -d spec -v --md",
    "test": "npm run clean && npm run lint && STYMIE=spec GNUPGHOME=spec/.gnupg npm run specs",
    "watch": "STYMIE=spec GNUPGHOME=spec/.gnupg bash ./scripts/watch.bash"
  }
}

